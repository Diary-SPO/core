{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@config": ["src/config"],
      "@utils": ["src/utils"],
      "@db": ["src/database"],
      "@helpers": ["src/helpers"],
      "@api": ["src/ApiError"]
    },
    "types": ["bun-types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
