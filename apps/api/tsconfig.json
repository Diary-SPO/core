{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@types": ["src/types"],
      "@config": ["src/config"],
      "@routes": ["src/routes"],
      "@utils": ["src/utils"],
      "@db": ["src/database"],
      "@models": ["src/models/"],
      "@helpers": ["src/helpers"],
      "@api": ["src/ApiError"],
    } ,
    "types": [
      "bun-types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
