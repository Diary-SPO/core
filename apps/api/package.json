{
  "name": "@diary-spo/api",
  "version": "2.0.0",
  "scripts": {
    "start": "bun run ./src/main.ts",
    "dev": "bun run --watch ./src/main.ts",
    "build": "bun build ./src/main.ts ./src/worker.ts --outdir dist --minify --target bun",
    "serve": "bun run build && bun run ./dist/main.js",
    "lint": "biome lint . --apply",
    "format": "biome format . --write",
    "checkAll": "biome check . --apply-unsafe"
  },
  "dependencies": {
    "@diary-spo/sql": "^1.2.2",
    "@elysiajs/cors": "^0.7.2",
    "bun": "^1.0.23",
    "elysia": "^0.8.5",
    "elysia-compression": "^0.0.6",
    "elysia-helmet": "^1.0.1",
    "jshashes": "^1.0.8",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "rand-token": "^1.0.1",
    "sequelize": "^6.35.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@diary-spo/shared": "^1.8.6",
    "@elysiajs/swagger": "^0.7.4",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "bun-types": "latest",
    "typescript": "^5.2.2"
  }
}
