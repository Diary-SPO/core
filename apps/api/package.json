{
  "name": "@diary-spo/api",
  "version": "1.0.0",
  "scripts": {
    "start": "bun run ./src/main.ts",
    "dev": "bun run --watch ./src/main.ts",
    "build": "bun build ./src/main.ts ./src/worker --outdir dist --minify --target bun",
    "serve": "bun run build && bun run ./dist/main.js",
    "lint": "biome lint . --apply",
    "format": "biome format . --write",
    "checkAll": "biome check . --apply-unsafe",
    "cli": "bun run ./src/cli"
  },
  "dependencies": {
    "@elysiajs/cors": "^0.8.0",
    "elysia": "^0.8.5",
    "elysia-compression": "^0.0.7",
    "elysia-helmet": "^1.0.1",
    "jshashes": "^1.0.8",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "rand-token": "^1.0.1",
    "sequelize": "^6.35.2",
    "cache-manager": "^5.4.0",
    "sequelize-simple-cache": "^1.3.4"
  },
  "devDependencies": {
    "@diary-spo/shared": "workspace:*",
    "@elysiajs/swagger": "^0.8.5",
    "@types/pg": "^8.10.9"
  }
}
