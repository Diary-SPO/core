    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@diary-spo/shared": "workspace:*",
    "@happy-dom/global-registrator": "^15.7.3",
    "@rsbuild/core": "^1.0.1-rc.5",
    "@rsbuild/plugin-react": "^1.0.1-rc.5",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
