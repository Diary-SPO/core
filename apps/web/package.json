{
  "name": "@diary-spo/web",
  "private": true,
  "version": "8.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite --mode development",
    "build": "bunx --bun vite build --mode production",
    "preview": "bunx --bun vite preview",
    "serve": "bun run build --mode production && bun preview",
    "predeploy": "bun run build --env-file=.env.production",
    "deploy:gh": "gh-pages -d dist",
    "deploy:vk": "vk-miniapps-deploy",
    "lint": "biome lint . --apply",
    "format": "biome format . --write",
    "checkAll": "biome check . --write --unsafe"
  },
  "dependencies": {
    "@elysiajs/eden": "1.1.2",
    "@vkontakte/icons": "2.133.0",
    "@vkontakte/vk-bridge": "^2.15.0",
    "@vkontakte/vk-bridge-react": "^1.0.1",
    "@vkontakte/vk-mini-apps-router": "1.4.6",
    "@vkontakte/vkui": "6.5.0",
    "date-fns": "^3.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@diary-spo/shared": "workspace:*",
    "@happy-dom/global-registrator": "^14.12.3",
    "@types/jsdom": "^21.1.7",
    "@vkontakte/vk-miniapps-deploy": "^0.1.8",
    "elysia": "1.1.2",
    "gh-pages": "^6.1.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "vite": "^6.0.0-alpha.19"
  },
  "browserslist": {
    "production": [">0.2%", "not dead", "not op_mini all"],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
